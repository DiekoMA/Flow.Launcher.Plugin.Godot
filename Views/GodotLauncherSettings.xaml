<UserControl x:Class="Flow.Launcher.Plugin.Godot.GodotLauncherSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flow.Launcher.Plugin.Godot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <StackPanel>
        <StackPanel Margin="4">
            <TextBlock Text="Godot Executable Path"/>
            <TextBox Name="GodotDirectoryTextBox"/>
        </StackPanel>
        <StackPanel Margin="4">
            <TextBlock Text="Godot Projects Path"/>
            <TextBox Name="GodotProjectsDirectoryTextBox"/>
        </StackPanel>
        <Button Content="Set Paths" Click="Button_Click" Margin="4"/>
    </StackPanel>
</UserControl>
